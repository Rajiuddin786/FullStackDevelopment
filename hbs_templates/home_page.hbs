<style>
    body {
        background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        height: 100vh;
    }

    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
    h1{
        display: flex;
        justify-content: center;
        align-items: end;
        height: 10vh;
        font-family: cursive;
    }
    .container{
        font-family: Verdana, Arial, Helvetica, sans-serif;
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 10px;
    }
    .button-62 {
        height: 50px;
        width: 150px;
        background: linear-gradient(to bottom right, #EF4765, #FF9A5A);
        border: 0;
        border-radius: 12px;
        color: #FDE7BB;
        cursor: pointer;
        display: inline-block;
        font-family: fantasy;
        font-size: 16px;
        font-weight: 500;
        line-height: 2.5;
        outline: transparent;
        padding: 0 1rem;
        text-align: center;
        text-decoration: none;
        transition: box-shadow .2s ease-in-out;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
    }
    .button-62:not([disabled]):focus {
        box-shadow: 0 0 .25rem rgba(0, 0, 0, 0.5), -.125rem -.125rem 1rem rgba(239, 71, 101, 0.5), .125rem .125rem 1rem rgba(255, 154, 90, 0.5);
    }

    .button-62:not([disabled]):hover {
        color: #AA5486;
        box-shadow: 0 0 .25rem rgba(0, 0, 0, 0.5), -.125rem -.125rem 1rem rgba(239, 71, 101, 0.5), .125rem .125rem 1rem rgba(255, 154, 90, 0.5);
    }

</style>
<body>
{{>bootstrap}}
<h1>Welcome User</h1>
    <div class="container" id="box-1">
        <span>Please Select Your Group</span>
    </div>
    <div class="container" id="box-2" style="height: 50vh;">
        <input type="button" value="Admin Log In" id="admin_login_btn" class="button-62">
        <input type="button" value="User Log In" id="user_login_btn" class="button-62">
    </div>
<script>
    document.getElementById("admin_login_btn").onclick = () =>{
        window.location.href = "/login-admin"
    }
    document.getElementById("user_login_btn").onclick = () =>{
        window.location.href = "/login-user"
    }
</script>
</body>