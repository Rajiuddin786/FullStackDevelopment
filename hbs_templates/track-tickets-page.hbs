<style>
    .container {
        display: flex;
        justify-content: center;
    }
    .container table {
        border: 2px solid black;
        margin: 10px;
        border-collapse: collapse;
    }
    .container table th,
    .container table td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
    }
    #go_back_btn{
        display: block;
    }
</style>
<body>
<div class="container">
    <table>
        <tr>
            <th>Tickets</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        {{#each tickets}}
            <tr id="ticket-{{_id}}">
                <td>{{ticket}}</td>
                <td>{{status}}</td>
                <td><form method="post" action="/delete-ticket"><input readonly type="hidden" name="id" value={{_id}}><input type="submit" value="Delete" id="delete_btn"></form></td>
            </tr>
        {{/each}}
    </table>
</div>
<div class="container">
<input type="button" value="Go Back" id="go_back_btn">
    {{>logout_btn}}
</div>
<script>
    document.getElementById("go_back_btn").onclick = () =>{
        window.location.href = '/tickets-user'
    }
</script>
</body>