<style>
    body {
        background-image: url("/images/blue-office-stationery-with-copy-space.jpg");
        background-size: cover;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f0f0f0; /* Light background color for better contrast */
    }

    .container {
        display: flex;
        height: 100vh; /* Full viewport height */
        justify-content: center;
        align-items: center;
        gap: 20px; /* Space between buttons */
    }

    .btn {
        height: 70px;
        width: 170px;
        background-color: #4CAF50; /* Default button color */
        color: white;
        border: none;
        border-radius: 5px; /* Slightly more rounded corners */
        cursor: pointer;
        font-size: 1.2em; /* Increased font size for better readability */
        transition: background-color 0.3s, transform 0.2s; /* Smooth transitions */
    }

    #track_ticket {
        background-color: #2196F3; /* Track ticket button color */
    }
    #create_ticket{
        background-color: #FF7F3E;
    }

    .btn:hover {
        opacity: 0.9; /* Slightly reduce opacity on hover */
        transform: scale(1.05); /* Slightly enlarge button on hover */
    }

    .logout-container {
        text-align: center; /* Center the logout button */
        margin-top: 20px; /* Space above the logout section */
    }

    .logout-container input[type="submit"] {
        padding: 10px 20px;
        font-size: 1em;
        color: #fff;
        background-color: #dc3545; /* Bootstrap danger color */
        border: none;
        border-radius: 5px; /* Rounded corners */
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .logout-container input[type="submit"]:hover {
        background-color: #c82333; /* Darker shade on hover */
    }
</style>

<body>
{{>bootstrap}}
<div class="container">
    <input type="button" class="btn" name="create_tickets" id="create_ticket" value="Create Ticket">
    <input type="button" class="btn" name="track_tickets" id="track_ticket" value="Track Ticket">
</div>
<div class="logout-container">
    <form action="/logout-{{user}}">
        <input type="submit" value="Log Out">
    </form>
</div>

<script>
    document.getElementById("create_ticket").onclick = () => {
        window.location.href = `/create-ticket-page-{{email}}`;
    }
    document.getElementById("track_ticket").onclick = () => {
        window.location.href = `/track-ticket-page-{{email}}`;
    }
</script>
</body>