<style>
    body{
        background-image: url("/images/admin_background.jpg");
        background-size: cover;
    }
    .container{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .form-group{
        display: block;
        margin: 10px;
        font-family: "Open Sans", sans-serif;
    }
    .text_box{
        border: 1px solid black;
    }
</style>
<body>
{{>bootstrap}}
<div class="container" id="admin">
    <form method="post" action="/authenticate-admin">
        <div class="form-group">
            <label for="admin_id">Enter Username or Email:</label><br>
            <input type="text" name="admin_id" id="admin_id" class="text_box" placeholder="Enter Username or Email">
        </div>
        <div class="form-group">
            <label for="admin_pass">Password:</label><br>
            <input type="text" name="admin_pass" id="admin_pass" class="text_box" placeholder="Enter Password">
        </div>
        <div class="form-group">
            <input type="submit" value="Log In" class="btn btn-primary">
        </div>
    </form>
</div>
</body>